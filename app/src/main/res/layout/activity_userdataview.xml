<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userdataview">


    <RelativeLayout
        android:id="@+id/profilephoto"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:background="@drawable/imageview_circular_shape"
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/foto_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/fotoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round">

            </ImageView>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <TextView
        android:id="@+id/namauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilephoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tester"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/sekolahuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namauser"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Tester 1"/>

</RelativeLayout>