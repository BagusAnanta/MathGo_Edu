<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/Title_MathgoEdu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="MathGo Edu"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/Title_MathgoEdu"
        android:layout_marginTop="10dp">



    <androidx.cardview.widget.CardView
        android:id="@+id/Card_identity"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/Title_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text="Hai "
                android:textSize="25sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Title_Name"
                android:layout_marginTop="7dp"
                android:text="Tester"
                android:textSize="25sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="sans-serif-black"/>


            <ImageView
                android:id="@+id/User_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/maskot2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="25dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Card_identity"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>