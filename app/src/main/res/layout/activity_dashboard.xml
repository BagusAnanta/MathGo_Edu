<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <TextView
        android:id="@+id/Title_MathgoEdu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="MathGo Edu"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/Title_MathgoEdu"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/Title_MathgoEdu"
        android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/Title_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text="Hai "
                android:textSize="25sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Title_Name"
                android:layout_marginTop="7dp"
                android:text="Tester"
                android:textSize="25sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="sans-serif-black"/>


            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="250dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/maskot2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/desc_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Title_Name"
                android:layout_marginStart="10dp"
                android:text="Selamat Datang di MathGo Edu!"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc_card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Untuk liat data kamu, pencet ini !"
                android:textSize="10sp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/Card_identity"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:columnOrderPreserved="false"
            app:rowCount="1">

        <!-- ROW 1 -->
        <!-- COLUMN 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:onClick="Play"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1.8"
            app:layout_gravity="start|end"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skor Permainan"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    />




                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ROW 1 -->
            <!-- COLUMN 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:onClick="Minigame"
                app:cardBackgroundColor="@android:color/background_light"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:layout_columnWeight="1"
                app:layout_gravity="start|end"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analisa"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-black"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.gridlayout.widget.GridLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/Menu_cardview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/gridlayout"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>