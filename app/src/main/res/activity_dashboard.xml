<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ImageView
        android:id="@+id/wave_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_wave"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/pilihan_shape"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="Hi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/Name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:padding="5dp"
                    android:text="Name"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <ImageButton
                    android:id="@+id/Setting_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="15dp"
                    android:autofillHints="@string/Settinghint"
                    android:background="@drawable/settings_background"
                    android:padding="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_info"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@id/text_user"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/background_light"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:text="Halo..."
                        android:textAlignment="textStart"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/test" />

                    <TextView
                        android:id="@+id/descriptionCT_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/greeting_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:text="Hai aku side, aku akan \n menemani kalian untuk \n menyelesaikan game ini"
                        android:textColor="@android:color/black" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridlayout"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@+id/cardview_info"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:columnOrderPreserved="false"
                app:rowCount="1">

                <!-- ROW 1 -->
                <!-- COLUMN 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:onClick="Play"
                    app:cardBackgroundColor="@color/maingame_cardview"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:layout_gravity="start|end"
                    app:layout_rowWeight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_play"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/play_icon" />

                        <TextView
                            android:id="@+id/textplay_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_play"
                            android:layout_marginTop="10dp"
                            android:text="Mainkan"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/desc_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textplay_id"
                            android:layout_marginTop="2dp"
                            android:paddingStart="2dp"
                            android:text="Mainkan Game"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/Best_title_mainkan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textplay_id"
                            android:layout_marginTop="50dp"
                            android:padding="5dp"
                            android:text="Best :"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/background_light"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/best_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textplay_id"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="50dp"
                            android:padding="5dp"
                            android:text="0"
                            android:textColor="@android:color/background_light"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- ROW 1 -->
                <!-- COLUMN 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:onClick="Minigame"
                    app:cardBackgroundColor="@color/minigame_cardview"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:layout_gravity="start|end"
                    app:layout_rowWeight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_info_test"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/info_icon" />

                        <TextView
                            android:id="@+id/textinfo_id_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_info_test"
                            android:layout_marginTop="10dp"
                            android:text="Minigames"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/background_light"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/desc_game_minigame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textinfo_id_test"
                            android:layout_marginTop="2dp"
                            android:paddingStart="2dp"
                            android:text="Minigames untuk referesh"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </androidx.gridlayout.widget.GridLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@id/gridlayout"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:onClick="Information"
                app:cardBackgroundColor="@color/bacaan_cardview"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/Literasi_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:text="Bacaan"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/background_light"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/descliterasi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Literasi_title"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:text="Tekan ini untuk mendapatkan informasi mengenai aplikasi ini dan tentang computational thinking"
                        android:textColor="@android:color/white" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>